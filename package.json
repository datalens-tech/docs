{
  "name": "@datalens-tech/docs",
  "version": "0.18.0",
  "private": false,
  "scripts": {
    "build": "npx @diplodoc/cli --input ./docs --output ./build/opensource/docs --config ./.yfm-docs",
    "build:prepare": "node ./scripts/build-prepare.js ./docs",
    "build:docker": "docker build . -t datalens-docs",
    "build:fix": "node ./scripts/build-fix.js",
    "build:api": "node ./scripts/build-api.js",
    "serve": "node ./scripts/dev.js",
    "dev": "DISABLE_WATCHER=true node ./scripts/dev.js",
    "run:docker": "npm run build:docker && docker run --read-only --user 65534 --tmpfs /tmp --rm --name datalens-docs -p 8080:80 datalens-docs",
    "test": "playwright test",
    "test:prepare": "npx playwright install --with-deps chromium",
    "deps": "bash ./scripts/cached-npm-install.sh"
  },
  "dependencies": {
    "@diplodoc/cli": "5.15.2",
    "@diplodoc/pdf-generator": "^1.1.9",
    "cheerio": "^1.1.0",
    "fs-extra": "^11.3.0",
    "yaml": "^2.8.1",
    "walk-sync": "^4.0.0"
  },
  "devDependencies": {
    "@gravity-ui/eslint-config": "4.1.0",
    "@gravity-ui/prettier-config": "1.1.0",
    "@gravity-ui/stylelint-config": "5.0.0",
    "@playwright/test": "1.48.2",
    "chokidar": "^4.0.3",
    "eslint": "9.28.0",
    "express": "^5.1.0",
    "prettier": "3.5.0",
    "stylelint": "16.20.0"
  }
}